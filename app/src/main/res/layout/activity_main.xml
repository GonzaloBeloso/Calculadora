<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/operando1">

            </TextView>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/operando2">

            </TextView>


        </LinearLayout>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:id="@+id/tablaBotones">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="*"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="0"
                android:id="@+id/cero"
                android:background="#9c9c9c"
                android:textSize="50sp"
                android:layout_weight="0.5"
                />
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="AC"
                android:id="@+id/borrar"
                android:background="#9c9c9c"
                android:textSize="30sp"
                android:layout_weight="0.5"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="del"
                android:id="@+id/b"
                android:background="#9c9c9c"
                android:textSize="30sp"
                android:layout_weight="0.5"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="+"
                android:id="@+id/suma"
                android:background="#ff8000"
                android:textSize="60sp"
                android:layout_weight="0.5"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="*"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="9"
                android:id="@+id/nueve"
                android:background="#9c9c9c"
                android:textSize="60sp"
                />
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="8"
                android:id="@+id/ocho"
                android:background="#9c9c9c"
                android:textSize="60sp"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="7"
                android:id="@+id/siete"
                android:background="#9c9c9c"
                android:textSize="60sp"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="-"
                android:id="@+id/resta"
                android:background="#ff8000"
                android:textSize="60sp"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="*"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="6"
                android:id="@+id/seis"
                android:background="#9c9c9c"
                android:textSize="60sp"
                />
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="5"
                android:id="@+id/cinco"
                android:background="#9c9c9c"
                android:textSize="60sp"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="4"
                android:id="@+id/cuatro"
                android:background="#9c9c9c"
                android:textSize="60sp"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="*"
                android:id="@+id/multiplicacion"
                android:background="#ff8000"
                android:textSize="60sp"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="*"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="3"
                android:id="@+id/tres"
                android:background="#9c9c9c"
                android:textSize="60sp"
                />
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="2"
                android:id="@+id/dos"
                android:background="#9c9c9c"
                android:textSize="60sp"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="1"
                android:id="@+id/uno"
                android:background="#9c9c9c"
                android:textSize="60sp"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="/"
                android:background="#ff8000"
                android:id="@+id/division"
                android:textSize="60sp"/>

        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:textSize="60sp"
        android:text="="
        android:id="@+id/igual"
        android:background="#9c9c9c"/>


</LinearLayout>